<% content_for :stylesheets, stylesheet_link_tag('refinery/calendar/calendar') %>

<% content_for :meta, "<link rel='alternate' type='application/rss+xml'
title='#{Refinery::Core.site_name + ' ' + t('.events')}'
href='#{refinery.calendar_root_url(:format => :rss)}' />".html_safe -%>
<% content_for :meta, "<link rel='alternate' type='application/ics'
title='#{Refinery::Core.site_name + ' ' + t('.events')}'
href='#{refinery.calendar_root_url(:format => :ics)}' />".html_safe -%>

<% content_for :javascripts do %>
	<script type="text/javascript" src="https://platform.twitter.com/widgets.js"></script>
	<script type="text/javascript" src="https://apis.google.com/js/plusone.js"></script>
	<script type="text/javascript" src="https://connect.facebook.net/en_US/all.js#xfbml=1"></script>
<% end if Refinery::Calendar.social_buttons %>

