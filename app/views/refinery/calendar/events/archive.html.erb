<% date_format = params[:month].present? ? '%B %Y' : '%Y' -%>
<% title = "#{t('.events_in')} #{@archive_date.strftime(date_format)}" -%>
<% content_for :title, title %>
<% content_for :body_content_title, title %>

<% content_for :body do %>
	<div id="events">
		<%= render :partial => 'event', :collection => @events, :locals => { :archive => true } %>
	</div>
	<%= will_paginate @events %>
<% end %>

<%= render '/refinery/calendar/sidebar' %>
<%= render '/refinery/content_page' %>
