<div class="field day-field">
  <%= f.label :date, :class => 'stripped' -%>: 
  <%= f.date_select :date_time, :default => Time.now.tomorrow %>
  <div class="duration">
    <div class="field time">
      <%= f.label :from, :class => 'stripped' -%>: 
      <%= f.time_select :date_time %> <%= f.label :to, :class => 'stripped' -%>:  <%= f.time_select :date_time %> <a href="javascript:void(0);" onclick="refinery.calendar.switchDurationToDays();">Switch to day</a><br>
      <a href="javascript:void(0);" onclick="refinery.calendar.addDay();">Add next day</a>
    </div>
                    
    <div class="field day" >
      <%= f.label :to, :class => 'stripped' -%>: 
      <%= f.date_select :date_time %> <a href="javascript:void(0);" onclick="refinery.calendar.switchDurationToTime();">Switch to time</a>
    </div>

    <%= f.hidden_field :_destroy %>
    <%= link_to_function 'remove', 'refinery.calendar.remove_fields(this)' %>
  </div>
</div>