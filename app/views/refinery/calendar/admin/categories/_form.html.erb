<h2>Calendar: Category</h2>
<%= form_for [refinery, :calendar_admin, @category] do |f| -%>
  <%= render "/refinery/admin/error_messages",
             :object => f.object,
             :include_object_name => true %>
             
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <%= render "/refinery/admin/form_actions",
             :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.calendar.admin.categories.category') %>
<% end %>
